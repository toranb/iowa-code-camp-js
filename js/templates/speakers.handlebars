    <table class="table">
      <tbody>
      {{#each speaker in controller}}
      <tr class="speaker-row">
        <td class="speaker-name">{{speaker.name}}</td>
        <td class="speaker-link">
          {{#link-to 'speaker' speaker.id class='btn btn-info btn-speaker pull-right'}}details{{/link-to}}</td>
        </td>
      </tr>
      {{else}}
      <tr class="no-speakers-found">
        <td>no speakers found</td>
        <td></td>
      </tr>
      {{/each}}
      </tbody>
    </table>
